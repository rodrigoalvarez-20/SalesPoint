@model SalesPoint.Models.Categoria

@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Agregar" class="m-auto mt-4 p-3" style="max-width:80%">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Categoria</h2>
        </div>
        <div class="container">
            <div class="row  mb-3">
                <div class="col-md-6">
                    <label asp-for="NombreCategoria" class="form-label">Nombre de la categoria</label>
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>
            <div class="row  mb-3">
                <div class="col-md-6">
                    <label asp-for="MostrarOrden" class="form-label">Orden de visualizacion</label>
                    <input asp-for="MostrarOrden" class="form-control" />
                    <span asp-validation-for="MostrarOrden" class="text-danger"></span>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-block m-auto">
                <button type="submit" class="btn btn-success ms-2 me-2" style="min-width:92px;">Crear</button>
                <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary ms-2 me-2" style="min-width:92px;">Regresar</a>
            </div>

        </div>
    </div>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

