@model IEnumerable<SalesPoint.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de productos</h2>
        </div>
        <div class="col-6 text-center m-auto">
            <a class="btn btn-info text-white" asp-controller="Producto" asp-action="Upsert">
                <i class="fas fa-plus"></i>&nbsp;Agregar producto
            </a>
        </div>

        @if (Model.Count() > 0) {
            <table class="table table-bordered table-striped mt-4" style="width:100%;">
                <thead class="text-center">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripcion corta</th>
                        <th>Precio</th>
                        <th>Categoria</th>
                        <th>Tipo</th>
                        <th class="w-25">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="m-auto">@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DescripcionCorta</td>
                            <td>@item.Precio</td>
                            <td>@item.Categoria.NombreCategoria</td>
                            <td>@item.TipoAplicacion.NombreAplicacion</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-outline-info mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-outline-danger mx-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        } else {
            <h3 class="text-danger text-center mt-4">No se han encontrado registros</h3>
        }

    </div>
</div>

