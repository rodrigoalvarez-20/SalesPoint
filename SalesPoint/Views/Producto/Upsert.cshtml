@model SalesPoint.Models.Producto
@{

    var titulo = Model.Id != 0 ? "Editar producto" : "Crear nuevo producto";

    ViewData["Title"] = titulo;
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<form method="post" asp-action="Upsert" enctype="multipart/form-data" class="m-auto mt-4 p-3" style="max-width:80%">
    @if (Model.Id != 0) {
        <input asp-for="Id" hidden />
    }

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 class="text-info">@titulo</h2>
        </div>
        <div class="row">
            <div class="col">
                <div class="container">
                    <div class="row mb-2">
                        <div class="col-xs-12 col-sm-6 col-md-4 mb-2">
                            <label asp-for="Name" class="form-label">Nombre producto</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 mb-2">
                            <label asp-for="Precio" class="form-label">Precio</label>
                            <input asp-for="Precio" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 mb-2">
                            <label asp-for="DescripcionCorta" class="form-label">Descripcion corta</label>
                            <input asp-for="DescripcionCorta" class="form-control" />
                            <span asp-validation-for="DescripcionCorta" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-xs-12 col-sm-6">
                            <div class="row m-auto mb-2">
                                <label asp-for="CategoriaId" class="form-label">Categoria</label>
                                <select asp-for="CategoriaId" asp-items="@ViewBag.dwCategoria" class="form-select">
                                    <option disabled selected>Seleccione la categoria</option>
                                </select>
                            </div>
                            <div class="row m-auto mb-2">
                                <label asp-for="CategoriaId" class="form-label">Tipo</label>
                                <select asp-for="CategoriaId" asp-items="@ViewBag.dwCategoria" class="form-select">
                                    <option disabled selected>Seleccione la categoria</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 mb-2">
                            <label asp-for="DescripcionProducto" class="form-label">Descripcion del producto</label>
                            <textarea rows="4" asp-for="DescripcionProducto" class="form-control"></textarea>
                            <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xs-12 col-sm-6 mb-2">
                            <label asp-for="UrlImagen" class="form-label">Imagen del producto</label>
                            <input type="file" name="files" id="imagenId" class="form-control" />
                        </div>
                        <div class="col-xs-12 col-sm-6 mb-2">
                            Preview
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="d-grid gap-2 d-md-block m-auto">
                            @if (Model.Id != 0) {
                                <button type="submit" class="btn btn-success ms-2 me-2" style="min-width:92px;">Guardar cambios</button>
                            } else {
                                <button type="submit" class="btn btn-success ms-2 me-2" style="min-width:92px;">Añadir</button>
                            }
                            <a asp-controller="Categoria" asp-action="Index" class="btn btn-secondary ms-2 me-2" style="min-width:92px;">Regresar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</form>

